        }

        tbody td {
            padding: 15px 20px;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: top;
        }

        tbody tr:hover {
            background-color: #fafafa;
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        td:first-child {
            font-weight: 500;
        }

        td:last-child {
            color: #666;
            font-weight: 500;
        }

        .section-header {
            font-size: 32px;
            font-weight: bold;
            color: #666;
            margin: 40px 0 20px 0;
            letter-spacing: 1px;
        }

        .links-section {
            margin-bottom: 30px;
        }

        .links-section a {
            display: block;
            color: #007bff;
            text-decoration: none;
            margin-bottom: 8px;
